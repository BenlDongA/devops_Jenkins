FROM node:18 as build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf  # ðŸ”¥ ThÃªm dÃ²ng nÃ y

EXPOSE 80  # âœ… NGINX cháº¡y cá»•ng 80, khÃ´ng pháº£i 3000
CMD ["nginx", "-g", "daemon off;"]
